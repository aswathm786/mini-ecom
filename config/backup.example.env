# Backup Configuration Example
# Copy this to your .env file and fill in actual values

# Backup Directory
BACKUP_DIR=/opt/miniecom/storage/backups

# MongoDB Connection URI
MONGO_URI=mongodb://admin:changeme@mongo:27017/miniecom?authSource=admin

# Backup Encryption
BACKUP_PASSPHRASE=your_secure_passphrase_here
ENCRYPT_BACKUP=true
COMPRESS_BACKUP=true

# Retention Policy (in days)
BACKUP_RETENTION_DAYS=14
BACKUP_RETENTION_WEEKS=12
BACKUP_RETENTION_MONTHS=12

# Offsite Backup Configuration
OFFSITE_HOST=backup.example.com
OFFSITE_USER=backup_user
OFFSITE_PATH=/backups/miniecom
OFFSITE_SSH_KEY=/home/user/.ssh/id_rsa

# Disk Space Monitoring
DISK_WARN_PCT=80
DISK_CRITICAL_PCT=90
CLEANUP_TEMP=true

# Alert Configuration
ALERT_EMAIL=admin@example.com
SMTP_FROM=noreply@handmadeharmony.com

# Backup Schedule (for systemd timer)
BACKUP_TIME=02:00

# Log Retention
LOG_RETENTION_DAYS=30
MAX_LOG_SIZE=100M

# Maintenance
UPDATE_IMAGES=false

