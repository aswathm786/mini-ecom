# ============================================
# Handmade Harmony / MiniEcom - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# Application
# ============================================
NODE_ENV=development
APP_NAME=Handmade Harmony
APP_URL=http://localhost:3000
API_URL=http://localhost:5000
PORT=5000
FRONTEND_PORT=3000

# ============================================
# Database
# ============================================
MONGODB_URI=mongodb://mongo:27017/handmade_harmony
# For local development without Docker:
# MONGODB_URI=mongodb://localhost:27017/handmade_harmony

# ============================================
# Security
# ============================================
JWT_SECRET=change-this-to-a-random-secret-key-min-32-chars
JWT_EXPIRES_IN=7d
CSRF_SECRET=change-this-to-another-random-secret-key
SESSION_SECRET=change-this-to-yet-another-random-secret-key
COOKIE_SECURE=false
COOKIE_SAME_SITE=Lax
REMEMBER_ME_EXPIRES_IN=30d

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Session & Device Binding
SESSION_EXPIRES_IN=24h
DEVICE_BINDING_ENABLED=true
IP_CHANGE_THRESHOLD=0.5
LOGIN_ALERT_ENABLED=true

# ============================================
# Admin User (Initial Seed)
# ============================================
ADMIN_EMAIL=admin@handmadeharmony.com
ADMIN_PASSWORD=ChangeThisPassword123!

# ============================================
# Razorpay Payment Gateway
# ============================================
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=
RAZORPAY_ENABLED=false

# ============================================
# Delhivery Shipping
# ============================================
DELHIVERY_TOKEN=
DELHIVERY_ENABLED=false
DELHIVERY_API_URL=https://track.delhivery.com/api

# ============================================
# Email Configuration
# ============================================
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM_EMAIL=noreply@handmadeharmony.com
SMTP_FROM_NAME=Handmade Harmony
EMAIL_FALLBACK_SENDMAIL=true

# ============================================
# File Uploads
# ============================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/gif
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,webp,gif

# ============================================
# Invoice & PDF
# ============================================
INVOICE_PREFIX=INV
INVOICE_DIR=./invoices
PDF_GENERATOR=puppeteer

# ============================================
# Business Settings (can be overridden in admin panel)
# ============================================
CURRENCY=INR
TAX_PERCENTAGE=18
SHIPPING_FREE_THRESHOLD=500
REFUND_WINDOW_DAYS=7
MAINTENANCE_MODE=false

# ============================================
# CORS
# ============================================
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ============================================
# Logging
# ============================================
LOG_LEVEL=info
LOG_DIR=./logs

# ============================================
# Jobs & Background Tasks
# ============================================
JOB_QUEUE_ENABLED=true
JOB_RETRY_ATTEMPTS=3
JOB_RETRY_DELAY_MS=5000

# ============================================
# Analytics
# ============================================
ANALYTICS_ENABLED=true

# ============================================
# Security Headers
# ============================================
CSP_ENABLED=true
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000



